<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="@dimen/sps_lpr_5"
    card_view:contentPadding="@dimen/sps_lpr_7"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:strokeWidth="2dp"
    card_view:strokeColor="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/txtSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="TEXT"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sps_txt_sz_40" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom|center_horizontal"
        android:text="DESCRIPTION"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sps_txt_sz_20" />

</com.google.android.material.card.MaterialCardView>